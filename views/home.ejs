<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  </head>
  <body>
    <div class="container mt-5">
        <h1 class="text-center">Express and MongoDB CRUD</h1>
    <form action="/add" method="POST" class="mt-4"> 
      <div class="form-group"> 
        <label for="name">Name</label> 
        <input type="text" name="name" class="form-control" placeholder="Name" required> 
      </div> 
  
      <div class="form-group"> 
        <label for="email">Email</label> 
        <input type="email" name="email" class="form-control" placeholder="Email" required> 
      </div> 
  
      <div class="form-group"> 
        <label for="age">Age</label> 
        <input type="number" name="age" class="form-control" placeholder="Age" required> 
      </div> 
  
      <button type="submit" class="btn btn-primary btn-block">Add User</button> 
    </form>

     <h2 class="mt-5">Users List</h2> 
    <table class="table table-striped"> 
      <thead> 
        <tr> 
          <th scope="col">#</th> 
          <th scope="col">Name</th> 
          <th scope="col">Email</th> 
          <th scope="col">Age</th> 
          <th scope="col">Actions</th> 
        </tr> 
      </thead> 
      <tbody> 
        <% if (users.length > 0) { %>
            <% users.forEach((user, index) => { %> 
            <tr> 
              <th scope="row"><%= index + 1 %></th> 
              <td><%= user.name %></td> 
              <td><%= user.email %></td> 
              <td><%= user.age %></td> 
              <td> 
                <a href="/edit/<%= user._id %>" class="btn btn-warning btn-sm">Edit</a> 
                <a href="/delete/<%= user._id %>" class="btn btn-danger btn-sm">Delete</a> 
              </td> 
            </tr> 
            <% }); %>
          <% } else { %> 
          <tr> 
            <td colspan="5" class="text-center">No users found</td> 
          </tr> 
          <% } %> 
      </tbody> 
    </table> 
</div> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
  </body>
</html>